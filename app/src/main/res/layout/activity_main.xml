<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <TextView
            android:text="@string/app_name"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="210dp"
            android:layout_height="49dp" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/resultadoCalculo"/>
    <TextView
            android:text="TextView"
            android:layout_width="225sp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textAlignment="center"
            android:id="@+id/resultadoCalculo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/classificacao" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="225sp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:textAlignment="center"
            android:id="@+id/classificacao"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/altura" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="56dp"/>
    <TextView
            android:text="@string/altura"
            android:layout_width="209dp"
            android:layout_height="23dp" android:id="@+id/altura"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/alturaValor"
            app:layout_constraintHorizontal_bias="0.495" android:layout_marginBottom="15dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/alturaValor"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/peso" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="@string/peso"
            android:layout_width="211dp"
            android:layout_height="23dp" android:id="@+id/peso"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/pesoValor" android:layout_marginBottom="15dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/pesoValor"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/botaoResultado" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginBottom="176dp"/>
    <Button
            android:text="@string/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/botaoResultado"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>